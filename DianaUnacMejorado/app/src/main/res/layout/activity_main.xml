<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/yellow"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="mx.unac.dianaunacmejorado.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="12dp"
        android:text="DOVE CAMERON"
        android:textColor="#FACC2E"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_weight="0.03" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="match_parent"
        android:layout_height="153dp"
        app:srcCompat="@mipmap/foto5" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="12dp"
        android:text="Es una actriz,cantante y compositora estadounidense,conocida por sus papeles en la serie Disney Channel"
        android:textColor="#848484"
        android:textSize="20sp"
        android:layout_weight="0.03" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:gravity="center"
        android:layout_margin="12dp"
        android:text="El Personaje Que Interpreto"
        android:textStyle="bold"
        android:textColor="#00BFFF"
        android:textSize="23sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:gravity="center"
        android:layout_margin="12dp"
        android:text="MAL ( DESENDIENTES)"
        android:textColor="#00BFFF"
        android:textSize="19sp" />

    <LinearLayout
        android:layout_width="382dp"
        android:layout_height="124dp"
        android:weightSum="1">

        <ImageView
        android:layout_width="101dp"
        android:layout_height="121dp"
        android:layout_marginLeft="70dp"
        app:srcCompat="@mipmap/mal" />
        <ImageView
            android:layout_width="110dp"
            android:layout_height="119dp"
            app:srcCompat="@mipmap/maly"
            android:layout_weight="0.01" />

    </LinearLayout>


    <Button

        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#00FF00"
        android:textColor="#585858"
        android:textStyle="bold"
        android:text="Continuar"
        android:layout_weight="0.68" />


</LinearLayout>
